<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display']">
  <!-- Navbar -->
  <nav class="w-full fixed top-0 left-0 px-5 py-3 bg-white z-10 shadow-sm">
    <h3 class="text-xl">Scatch</h3>
  </nav>

  <!-- Success Message -->
  <% if(success.length > 0) { %>
    <div class="absolute top-20 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500 z-20">
      <span class="inline-block text-white">
        <%= success %>
      </span>
    </div>
  <% } %>

  <!-- Main Layout -->
  <div class="w-full min-h-screen pt-20 flex flex-col lg:flex-row px-5 lg:px-20">
    
    <!-- Register -->
    <div class="w-full lg:w-1/2 flex items-center justify-center py-10">
      <div class="w-full max-w-md">
        <h3 class="text-3xl lg:text-4xl mb-1">Welcome to <span class="text-blue-400 font-semibold">Scatch</span></h3>
        <h4 class="text-xl lg:text-2xl mb-5">Create your account</h4>
        <form autocomplete="off" action="/users/register" method="post">
          <input class="bg-zinc-100 block w-full px-3 py-2 border rounded-md mb-3 border-zinc-200" type="text" placeholder="Full Name" name="fullname" />
          <input class="bg-zinc-100 block w-full px-3 py-2 border rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email" />
          <input class="bg-zinc-100 block w-full px-3 py-2 border rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password" />
          <input class="px-5 w-full rounded-full py-3 mt-2 bg-blue-500 text-white cursor-pointer" type="submit" value="Create My Account" />
        </form>
      </div>
    </div>

    <!-- Login -->
    <div class="w-full lg:w-1/2 flex items-center justify-center py-10">
      <div class="w-full max-w-md">
        <h4 class="text-xl lg:text-2xl mb-5 capitalize">Login your account</h4>
        <form autocomplete="off" action="/users/login" method="post">
          <input class="block bg-zinc-100 w-full px-3 py-2 border rounded-md mb-3 border-zinc-200" type="email" placeholder="Email" name="email" />
          <input class="block bg-zinc-100 w-full px-3 py-2 border rounded-md mb-3 border-zinc-200" type="password" placeholder="Password" name="password" />
          <input class="px-5 w-full rounded-full py-3 mt-2 bg-blue-500 text-white cursor-pointer" type="submit" value="Login" />
        </form>
      </div>
    </div>
  </div>
</body>
</html>
