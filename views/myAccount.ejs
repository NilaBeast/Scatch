<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900">
    <nav class="w-full flex justify-between px-5 py-3">
        <h3 class="text-xl">Scatch</h3>
        <% var loggedin = typeof loggedin !== "undefined" ? loggedin : true %>
        <% if(loggedin){ %>

            <div class="flex gap-5">
                <a  class="hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out " href="/shop">Shop</a>
                <a class="hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out " href="/cart">Cart</a>
                <a class="hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out " href="/profile">My Account</a>
                <a class="text-red-600 hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out" href="/users/logout">Logout</a>
            </div>


       <% } %>
    </nav>

    <div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-lg">
        <!-- Profile Image Section -->
        <div class="relative w-28 h-28 mb-4">
            <img
                src="<% if (user.profileImage && user.profileImage.data) { %>
                    data:<%= user.profileImage.contentType %>;base64,<%= user.profileImage.data.toString('base64') %>
                <% } else { %>
                    https://via.placeholder.com/100
                <% } %>"
                alt="Profile"
                class="w-full h-full rounded-full object-cover border"
            />

            <button
                onclick="toggleEdit()"
                class="absolute bottom-0 right-0 bg-blue-600 text-white px-2 py-1 text-xs rounded hover:bg-blue-700 transition"
            >
                <% if (user.profileImage && user.profileImage.data) { %>Edit<% } else { %>Add<% } %>
            </button>
        </div>

        <!-- Hidden Profile Image Upload Form -->
        <form
            id="editForm"
            action="/users/profile"
            method="POST"
            enctype="multipart/form-data"
            class="hidden space-y-4"
        >
            <div>
                <label for="profileImage" class="block font-medium mb-1">Upload Profile Picture</label>
                <input
                    type="file"
                    name="profileImage"
                    id="profileImage"
                    accept="image/*"
                    required
                    class="block w-full border px-3 py-2 rounded"
                />
            </div>
            <button
                type="submit"
                class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition"
            >
                Save Changes
            </button>
        </form>

        <!-- User Info -->
        <h1 class="text-2xl font-bold mb-2">Welcome, <%= user.fullname %>!</h1>
        <p class="text-lg">Email: <%= user.email %></p>

        <!-- Logout -->
        <a href="/users/logout" class="inline-block mt-6 bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition">Logout</a>
    </div>

    <script>
        function toggleEdit() {
            document.getElementById('editForm').classList.toggle('hidden');
        }
    </script>

</body>
</html>
