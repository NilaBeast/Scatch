<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-['helvitica_now_display']">
    <nav class="w-full flex justify-between px-5 py-3">
        <h3 class="text-xl">Scatch</h3>
        <% var loggedin = typeof loggedin !== "undefined" ? loggedin : true %>
        <% if(loggedin){ %>

            <div class="flex gap-5">
                <a  class="hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out " href="">Shop</a>
                <a class="hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out " href="/cart">Cart</a>
                <a class="hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out " href="/profile">My Account</a>
                <a class="text-red-600 hover:text-blue-400  hover:transition-all hover:duration-300 hover:ease-in-out" href="/users/logout">Logout</a>
            </div>


       <% } %>
    </nav>

    <% if(success.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <% } %>

    <div class="w-full h-screen flex items-start px-20 py-20">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex items-center gap-2">
                <h3>sort by</h3>
                <form action="/shop" method="GET">
                    <select class="border-[1px] px-2 py-1" name="sortby" onchange="this.form.submit()">
                        <option value="popular" <%= sortby === 'popular' ? 'selected' : '' %>>Popular</option>
                        <option value="newest" <%= sortby === 'newest' ? 'selected' : '' %>>Newest</option>
                    </select>
                </form>
                
            </div>
            <div class="flex flex-col mt-20">
                <a class="block w-fit mb-2" href="/shop?filter=new">New Collection</a>
                <a class="block w-fit mb-2" href="/shop">All Products</a>
                <a class="block w-fit mb-2" href="/shop?filter=discount">Discounted Products</a>
            </div>
            
            <div class="mt-32">
                <span class="block w-fit mb-2 font-semibold">Filter by :</span>
                <a class="block w-fit mb-2" href="/shop?sortby=priceAsc">Price low - high</a>
                <a class="block w-fit mb-2" href="/shop?sortby=priceDesc">Price high - low</a>
            </div>
            
        </div>
        <div class="w-[75%] flex flex-col gap-5 h-screen">
            <div class="flex items-start gap-5">
                <% products.forEach(function(product){ %>
                    <div class="w-60">
                        <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]">
                            <img class="h-[10rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                alt="">
                        </div>
                        <div
                            class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                            <div>
                                <h3>
                                    <%= product.name %>
                                </h3>
                                <h4>â‚¹ <%= product.price %>
                                </h4>
                            </div>
                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/addtocart/<%= product.id %>">
                                <i class="ri-add-line"></i>
                            </a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

</body>
</html>