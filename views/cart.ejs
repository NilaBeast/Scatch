<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-['helvetica_now_display']">
    <nav class="w-full flex justify-between px-5 py-3">
        <h3 class="text-xl">Scatch</h3>
        <div class="flex gap-5">
            <a  class="hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out " href="/shop">Shop</a>
            <a  class="hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out " href="/cart">Cart</a>
            <a  class="hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out " href="/profile">My Account</a>
            <a class="text-red-600 hover:text-blue-400 hover:transition-all hover:duration-300 hover:ease-in-out" href="/users/logout">Logout</a>
        </div>
    </nav>
    
    
    
    <% itemBills.forEach(function(entry){ %>
        <% const item = entry.item; %>
        <form action="/removefromcart/<%= item._id %>" method="GET">
            <button 
                type="submit" 
                class="mt-4 px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600">
                Remove
            </button>
        </form>
        
        <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
            <div class="w-[30%] rounded-md overflow-hidden">
                <div class="w-full h-80 flex justify-center items-center bg-[<%= item.bgcolor %>]">
                    <img  class="h-[18rem]" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
                </div>
                <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>]">
                    <h3 class="text-2xl">Clinge Bag</h3>
                    <div class="flex items-center gap-2">
                        
                        <div class="flex items-center gap-3 px-4 py-2 rounded-full bg-<%= item.panelcolor %> shadow-md">
                            <!-- Decrease button -->
                            <a href="/cart/decrease/<%= entry.item._id %>" 
                               class="w-8 h-8 flex items-center justify-center bg-white-600 hover:bg-blue-500 text-white rounded-full transition">
                              <i class="ri-subtract-line text-lg"></i>
                            </a>
                          
                            <!-- Quantity Display -->
                            <span class="text-base font-semibold text-gray-800"><%= entry.quantity %></span>
                          
                            <!-- Increase button -->
                            <a href="/cart/increase/<%= entry.item._id %>" 
                               class="w-8 h-8 flex items-center justify-center bg-white-600 hover:bg-blue-500 text-white rounded-full transition">
                              <i class="ri-add-line text-lg"></i>
                            </a>
                          </div>
                          
                       
                    </div>
                </div>
                <div class="flex text-white items-center justify-between px-5 py-3 bg-[<%= item.textcolor %>]">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg">₹ <%= entry.total %></h2>
                </div>
            </div>
            <div class="w-[70%]">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Total MRP</h4>
                        <h4>₹ <%= entry.price %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Discount on MRP</h4>
                        <h4>₹ <%= Number(entry.discount) %></h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ 20</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">₹ <%= entry.total %></h3>
                </div>
                <form action=""></form>
            </div>
        </div>
    <% }) %>
</body>
</html>